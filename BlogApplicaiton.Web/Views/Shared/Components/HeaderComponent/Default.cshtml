@using BlogApplicaiton.Services.UserServices
@inject IUserContext userContext

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Blog platform</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-action="List" asp-controller="Blog">All blogs</a>
                    </li>
                </ul>
                <div class="d-flex">
                    @if (userContext.IsAuthenticated == true)
                    {
                        <a href="@Url.Action("SignOut", "Authentication")" style="text-decoration: none;" class="btn btn-outline-secondary">Sign out</a>
                    }
                    else
                    {
                        <a href="@Url.Action("SignIn", "Authentication")" style="text-decoration: none;" class="btn btn-outline-success">Sign in</a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>